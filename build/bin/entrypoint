#!/bin/sh -e

# This is documented here:
# https://docs.openshift.com/container-platform/3.11/creating_images/guidelines.html#openshift-specific-guidelines

if ! whoami &>/dev/null; then
  if [ -w /etc/passwd ]; then
    echo "${USER_NAME:-thelounge-operator}:x:$(id -u):$(id -g):${USER_NAME:-thelounge-operator} user:${HOME}:/sbin/nologin" >> /etc/passwd
  fi
fi

if [ "$DEBUG" = true ] ; then
    echo "*** DEBUG MODE ***"
    exec /usr/local/bin/dlv --listen=:40000 --headless=true --api-version=2 exec ${OPERATOR} $@
else
    echo "*** PROD MODE ***"
    exec ${OPERATOR} $@
fi
